<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LACHAUD_Ethan_MAUI.Page4">
    <ContentPage.Content>
        
        <!--La dernière page est une page libre mais OBLIGATOIRE qui doit contenir au moins 2
fonctionnalités différentes de votre choix. -->

        <VerticalStackLayout>
            <CarouselView ItemsSource="{Binding Images}">
                <CarouselView.ItemTemplate>
                    <DataTemplate>
                        <Image Source="{Binding .}" Aspect="AspectFill"/>
                    </DataTemplate>
                </CarouselView.ItemTemplate>
            </CarouselView>
            
        </VerticalStackLayout>
        
    </ContentPage.Content>
</ContentPage>