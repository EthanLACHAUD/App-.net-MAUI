<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="LACHAUD_Ethan_MAUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:LACHAUD_Ethan_MAUI"
    Shell.FlyoutBehavior="Disabled"
    Title="LACHAUD_Ethan_MAUI">

    <TabBar>
        <Tab Title="Page 1" Icon="home.png">
            <ShellContent Route="MainPage" ContentTemplate="{DataTemplate local:MainPage}" />
        </Tab>
        
        <Tab Title="Page 2" Icon="dossier.png">
            <ShellContent Route="Page2" ContentTemplate="{DataTemplate local:Page2}" />
        </Tab>
        
        <Tab Title="Page 3" Icon="page.png">
            <ShellContent Route="Page3" ContentTemplate="{DataTemplate local:Page3}" />
        </Tab>
        
        <Tab Title="Page 4" Icon="tel.png">
            <ShellContent Route="Page3" ContentTemplate="{DataTemplate local:Page4}" />
        </Tab>
    </TabBar>

</Shell>
